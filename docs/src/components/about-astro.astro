---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<article class="flex" aria-labelledby="about-astro-heading">
  <small id="about-astro-heading">
    {title}
    <span class="sr-only">Sapiens IA</span>
  </small>
  <img src="https://raw.githubusercontent.com/Vortextech01/Basilisk.V.0.7/main/public/E452A0EE-1BA0-45FD-83D9-C9C87086A612.gif" alt="My Image">
  <slot />
</article>

<style>
  article {
    max-width: 40rem;
    margin-inline: auto;
    padding-block: 5rem;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.5rem;
  }
  article > :global(*) {
    margin-top: 0 !important;
    max-width: 50ch;
  }
  small {
    color: var(--sl-color-gray-3);
  }
  img {
    width: 15rem;
  }
</style>
